{
  "name": "apple-news-format",
  "version": "0.2.4",
  "description": "Types for Apple News Format, including a small selection of string validation functions",
  "main": "lib",
  "scripts": {
    "build": "./node_modules/.bin/tsc",
    "test": "./node_modules/.bin/ts-mocha ./tests/**/*.test.ts",
    "lint": "./node_modules/.bin/tslint ./src/**/*.ts",
    "prepublish": "npm run lint && npm test",
    "prepublishOnly": "npm run build",
    "postinstall": "if [ ! -d node_modules/apple-news-format/lib ]; then npm run build; fi",
    "clean": "rm -rf lib"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test",
      "pre-push": "npm run lint && npm test"
    }
  },
  "keywords": [
    "apple news",
    "apple-news",
    "format",
    "apple news format",
    "news format",
    "types",
    "@types",
    "typings",
    "ts",
    "typescript"
  ],
  "author": {
    "name": "Robert Fairley",
    "email": "rrafairley@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "chai": "^4.2.0",
    "husky": "^1.3.1",
    "mocha": "^6.1.4",
    "ts-mocha": "^6.0.0",
    "tslint": "^5.16.0",
    "typescript": "^3.9.5"
  }
}
